{
    "Class": {
        "prefix": [
            "class"
        ],
        "body": [
            "/**",
            " * @author ${VIM:\\$USER}",
            " */",
            "class $1 ${2:extends ${3:Parent} }{",
            "\tconstructor() {",
            "\t\t$0",
            "\t}",
            "}"
        ],
        "description": "Class definition template."
    },
    "Info": {
        "prefix": [
            "info"
        ],
        "body": [
            "info(0) << $1 << std::endl"
        ],
        "description": "Info Logging"
    },
    "Debug": {
        "prefix": [
            "dbg"
        ],
        "body": [
            "info(0) << \"_DEBUG_ $TM_FILENAME:$TM_LINE_NUMBER\" << std::endl;"
        ],
        "description": "Info Logging"
    },
    "shared_ptr": {
        "prefix": [
            "ptr"
        ],
        "body": [
            "std::shared_ptr<$1>"
        ]
    }
}
